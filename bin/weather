src=$(curl -s pogoda.ngs.ru |
	awk '
		match($0, /<span class="value__main">([^<]+)<\/span>/, m) {
			sub("&minus;", "â€”", m[1]); t=m[1]
		}
		match($0, /<span class="value-description">([^<]+)<\/span>/, m) {
			f=m[1]
			print t " " f
		}
	')

echo $src
