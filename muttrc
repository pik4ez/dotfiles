set ssl_verify_dates=no

#mailboxes imap://s.seletskiy@office.ngs.ru@mail.office.ngs.ru/
mailboxes =INBOX

set index_format="%4C %Z %{%d/%m %T} %-20.20L %s"

set header_cache="~/.mutt_headers_cache"

set sendmail="/usr/bin/msmtp"
account-hook imap://s.seletskiy@office.ngs.ru@mail.office.ngs.ru/ '\
    set from="Селецкий Станислав <s.seletskiy@office.ngs.ru>"\
        imap_pass=PASSWORD\
        folder=imap://s.seletskiy@office.ngs.ru@mail.office.ngs.ru/\
        record="+Sent"\
        postponed="+Drafts"'

set spoolfile='imap://s.seletskiy@office.ngs.ru@mail.office.ngs.ru'

set markers=no

set editor="vim"

set imap_check_subscribed
unset imap_passive

# Reduce polling frequency to a sane level
set mail_check=60

set sort=date

set alias_file=~/.mutt_aliases
source $alias_file
set metoo

bind index \e[7~ first-entry
bind index \e[8~ last-entry
bind pager \e[7~ top
bind pager \e[8~ bottom
bind index @ imap-fetch-mail

